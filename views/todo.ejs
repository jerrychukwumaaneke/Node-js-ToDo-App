<html>
    <head>
        <title>Todo List</title>
        <script
  src="https://code.jquery.com/jquery-4.0.0.js"
  integrity="sha256-9fsHeVnKBvqh3FB2HYu7g2xseAZ5MlN6Kz/qnkASV8U="
  crossorigin="anonymous"></script>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css" >
    </head>
    <body>
        <h1>My Todo List</h1>
        <div id="todo-table">
            <form>
                <input type="text" name="item" placeholder="add new item" required/>
                <button type="submit">Add Item</button>
            </form>
            <ul>
            <% for(var i=0; i<todos.length; i++){ %>
                <li><%= todos[i].item %></li>

           <% } %>
            </ul> 
        </div>
        <!-- had to add this script to make the adding to reflect to the list array view -->
        <script src="/assets/todo-list.js"></script>
    </body>
</html>  

